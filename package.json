{
	"name": "silo-hc-monitor",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "ponder dev",
		"dev:bot": "nodemon --exec tsx bot/index.ts",
		"dev:notifier": "nodemon --exec tsx bot/notifier/index.ts",
		"dev:all": "concurrently \"pnpm dev\" \"pnpm dev:bot\" \"pnpm dev:notifier\"",
		"start": "ponder start",
		"start:bot": "tsx bot/index.ts",
		"start:notifier": "tsx bot/notifier/index.ts",
		"start:all": "concurrently \"pnpm start\" \"pnpm start:bot\" \"pnpm start:notifier\"",
		"migrate:bot": "tsx bot/db/bot/migrate.ts",
		"codegen": "ponder codegen",
		"serve": "ponder serve",
		"lint": "eslint .",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@ponder/core": "^0.5.15",
		"abitype": "^1.0.6",
		"drizzle-orm": "^0.33.0",
		"express": "^4.19.2",
		"grammy": "^1.29.0",
		"hono": "^4.5.6",
		"pg": "^8.12.0",
		"tiny-invariant": "^1.3.3",
		"viem": "^1.19.9"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"ts-node": "^10.9.2",
		"tsx": "^4.17.0",
		"@types/express": "^4.17.21",
		"@types/node": "^22.4.1",
		"@types/pg": "^8.11.6",
		"@types/uuid": "^10.0.0",
		"concurrently": "^8.2.2",
		"drizzle-kit": "^0.22.8",
		"eslint": "^8.54.0",
		"eslint-config-ponder": "^0.5.15",
		"nodemon": "^3.1.4",
		"typescript": "^5.5.4"
	},
	"engines": {
		"node": ">=18.14"
	},
	"packageManager": "pnpm@9.4.0"
}
